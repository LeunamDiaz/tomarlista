rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colecci칩n de estudiantes
    match /students/{studentId} {
      // Permitir lectura a todos los usuarios
      allow read: if true;
      
      // Permitir escritura solo si el documento existe y se est치 actualizando
      // o si se est치 creando un nuevo documento
      allow create: if request.resource.data.keys().hasAll(['matricula', 'nombre']) 
                     && request.resource.data.matricula is string 
                     && request.resource.data.nombre is string
                     && request.resource.data.asistencias is list;
      
      allow update: if request.resource.data.keys().hasAll(['matricula', 'nombre']) 
                      && request.resource.data.matricula is string 
                      && request.resource.data.nombre is string
                      && request.resource.data.asistencias is list;
      
      allow delete: if true; // Permitir eliminaci칩n para administradores
    }
    
    // Bloquear acceso a otras colecciones
    match /{document=**} {
      allow read, write: if false;
    }
  }
}